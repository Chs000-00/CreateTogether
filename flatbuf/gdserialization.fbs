include "ccserialization.fbs";

namespace CTSerialize; 

// Simple container for showing vuids
table veryUniqueID {
    associatedID:uint64;
    objectvUID:uint32;
} 

/// The data a GD Game Object has when placed in the editor
table GDGameObjectMin {
    uniqueID:veryUniqueID;
    objID:uint64;
    pos:CCPosI;
    rotation:float;
    isHighDetail:bool;
    noGlow:bool;
    noEnter:bool;
    flip:ObjectFlip;
    scale:NodeScale;
}

table MoveEntry {
    positionOffsetKey:CCPos;
    uniqueIDList:[veryUniqueID];
}

table GDWaveObject {
    cursorColor1:int;
    cursorColor2:int;
    cursorID:int;
    cursorHasGlow:bool;
    cursorGlowColor:int;
}

