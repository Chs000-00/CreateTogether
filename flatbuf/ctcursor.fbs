include "ccserialization.fbs";

namespace CTSerialize.cursor; 

enum StatusType : byte {
    Show = 0, // User is editing level
    EditorPlaytesting, // User is playtesting the level from the editor
    RealPlaytesting, // User is playtesting the level
    EditingTrigger,
    EditingLevelSettings,
    LevelEditorPaused
}
// For SteamNetworkingMessages, this will be sent on channel 2
table CursorUpdate {
    position:CCPos;
    status:StatusType;
    associatedID:uint64;
}

root_type CursorUpdate;